<div class= "container">
    <div class= "jumbotron">
        <div class="col col-xs-12 text center" id="top-bar">
            {{!-- <img src="../public/assets/img/burger.jpg" class="img-fluid" > --}}
            <h1>Have a burger!</h1>
        </div>    
        <h2>Choose your burger</h2>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre> 
                </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT"
                class="button-size">
                    <input type="hidden" name="burger_id" type="type"
                    value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                    EAT IT!</button>
                    </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>

        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                <input class="from-control" type="text" placeholder=
                "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_selection">
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Choose a burger to eat!</p>
        </div>
    </div>
</div>
