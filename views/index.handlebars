        </div>    
        <h2>Choose your burger</h2>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-10 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre> 
                </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/Burger/update?_method=PUT"
                class="button-size">
                <input type="hidden" name="burger_id" type="type"
                value={{tis.id}}>
                <br>
                <button type="submit" class="btn btn-default">
                EAT IT!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>

        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                <input class="from-control" type="text" placeholder=
                "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
