<div class= "container">
    <div class= "row-justify-content-center">
        <div class="col col-md-13 text center mt-3 mb-4">
            <img class="img-responsive" src="/public/assets/img/gourmet-burger.jpg">
        </div>
    </div>
<h1>Have a burger!</h1>
<h2>Choose your burger</h2>
<ul>
    {{#the burgers}}
    {{#done devoured}}
    <li>
        <button class="devoured" data-id="{{eaten.id}}" class="results">Eat!</button>
        <button class="submit" data-del="{{eaten.id}}" class="delete">Delete</button>
    </li>
    {{/the}}
    {{/done}}

</ul>
</div>
<h2>Eat another burger!</h2>
<form class="create-form">
    <div class="form-list">
        <label for="burger_name">Burger list:</label>
        <input type="text" id="burger" name"name"> <button type="submit">Prepare!</button> 
    </div>
</form>

